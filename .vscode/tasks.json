    "version": "0.1.0",
    "command": "${config.python.pythonCommand}",
    "isShellCommand": true,
    "showOutput": "always",
    "echoCommand": true,
    "tasks": [
        {"taskName": "run python",
            "args": ["${file}"],
            "suppressTaskName": true}
    ]
}